<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Name"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:padding="5dp"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/row_ratingStars1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      	android:layout_toLeftOf="@+id/row_ratingStars2"
        android:paddingLeft="1dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/star_rating_small" />

    <ImageView
        android:id="@+id/row_ratingStars2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/row_ratingStars3"
        android:paddingLeft="1dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/star_rating_small" />

    <ImageView
        android:id="@+id/row_ratingStars3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/row_ratingStars4"
        android:paddingLeft="1dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/star_rating_small" />

    <ImageView
        android:id="@+id/row_ratingStars4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/row_ratingStars5"
        android:paddingLeft="1dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/star_rating_small" />

    <ImageView
        android:id="@+id/row_ratingStars5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
      
        android:paddingLeft="1dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/star_rating_small" />

    <TextView
        android:id="@+id/txtDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="5dip"
        android:text="@string/distance"
        android:textColor="#343434"
        android:textSize="15dip" />

</RelativeLayout>

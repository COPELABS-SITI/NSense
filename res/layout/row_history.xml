<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/device_name_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:padding="8dp"
        android:gravity="left"
        android:text="Device Name" />
    
   

    <TextView
        android:id="@+id/device_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/device_name_header"
        android:layout_toLeftOf="@+id/si_layout"
        android:paddingLeft="8dp"
        android:paddingBottom="8dp"
        android:gravity="left"
        android:text="Device Name" />

    <!--
    <RatingBar
        android:id="@+id/si_rating_bar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/prop_rating_bar" />

    <RatingBar
        android:id="@+id/prop_rating_bar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="6dp" />
    -->

<TextView
        android:id="@+id/prop_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/prop_layout"
        android:padding="8dp"
        android:gravity="left"
        android:text="Prop" />

    <LinearLayout
        android:id="@+id/prop_layout"
        android:layout_below="@+id/device_name_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/prop_ratingStars1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/row_ratingStars2"
            android:paddingLeft="1dp"
            android:src="@drawable/star_rating_small" />

        <ImageView
            android:id="@+id/prop_ratingStars2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/row_ratingStars3"
            android:paddingLeft="1dp"
            android:src="@drawable/star_rating_small" />

        <ImageView
            android:id="@+id/prop_ratingStars3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/row_ratingStars4"
            android:paddingLeft="1dp"
            android:src="@drawable/star_rating_small" />

        <ImageView
            android:id="@+id/prop_ratingStars4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/row_ratingStars5"
            android:paddingLeft="1dp"
            android:src="@drawable/star_rating_small" />

        <ImageView
            android:id="@+id/prop_ratingStars5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:paddingLeft="1dp"
            android:src="@drawable/star_rating_small" />
    </LinearLayout>
    <TextView
        android:id="@+id/si_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/si_layout"
        android:layout_alignRight="@+id/si_layout"
        android:padding="8dp"
        android:gravity="left"
        android:text="S.I" />
    
    <LinearLayout
        android:id="@+id/si_layout"
        android:layout_below="@+id/device_name_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/prop_layout"
        android:layout_marginRight="6dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/si_ratingStars1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/row_ratingStars2"
            android:paddingLeft="1dp"
            android:src="@drawable/star_rating_small" />

        <ImageView
            android:id="@+id/si_ratingStars2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/row_ratingStars3"
            android:paddingLeft="1dp"
            android:src="@drawable/star_rating_small" />

        <ImageView
            android:id="@+id/si_ratingStars3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/row_ratingStars4"
            android:paddingLeft="1dp"
            android:src="@drawable/star_rating_small" />

        <ImageView
            android:id="@+id/si_ratingStars4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@+id/row_ratingStars5"
            android:paddingLeft="1dp"
            android:src="@drawable/star_rating_small" />

        <ImageView
            android:id="@+id/si_ratingStars5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="3dp"
            android:paddingLeft="1dp"
            android:src="@drawable/star_rating_small" />
    </LinearLayout>

</RelativeLayout>
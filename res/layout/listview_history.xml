<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="false" >

    <RelativeLayout
        android:id="@+id/ActionDetails"
        android:layout_width="fill_parent"
        android:layout_height="25dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header"
            android:layout_marginLeft="5dp"
            android:text="Device Name"
            android:textStyle="bold"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/si_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"   
            android:layout_marginLeft="180dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/row_ratingStars1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_toLeftOf="@+id/row_ratingStars2"
                android:paddingLeft="1dp"
                android:src="@drawable/star_rating_small" />

            <ImageView
                android:id="@+id/row_ratingStars2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_toLeftOf="@+id/row_ratingStars3"
                android:paddingLeft="1dp"
                android:src="@drawable/star_rating_small" />

            <ImageView
                android:id="@+id/row_ratingStars3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_toLeftOf="@+id/row_ratingStars4"
                android:paddingLeft="1dp"
                android:src="@drawable/star_rating_small" />

            <ImageView
                android:id="@+id/row_ratingStars4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_toLeftOf="@+id/row_ratingStars5"
                android:paddingLeft="1dp"
                android:src="@drawable/star_rating_small" />

            <ImageView
                android:id="@+id/row_ratingStars5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dip"
                android:layout_marginTop="7dp"
                android:paddingLeft="1dp"
                android:src="@drawable/star_rating_small" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/prop_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"            
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/row1_ratingStars1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:paddingLeft="1dp"
                android:src="@drawable/star_rating_small" />

            <ImageView
                android:id="@+id/row1_ratingStars2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_toLeftOf="@+id/row_ratingStars3"
                android:paddingLeft="1dp"
                android:src="@drawable/star_rating_small" />

            <ImageView
                android:id="@+id/row1_ratingStars3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_toLeftOf="@+id/row_ratingStars4"
                android:paddingLeft="1dp"
                android:src="@drawable/star_rating_small" />

            <ImageView
                android:id="@+id/row1_ratingStars4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_toLeftOf="@+id/row_ratingStars5"
                android:paddingLeft="1dp"
                android:src="@drawable/star_rating_small" />

            <ImageView
                android:id="@+id/row1_ratingStars5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                
                android:layout_marginRight="20dip"
                android:layout_marginTop="7dp"
                android:paddingLeft="1dp"
                android:src="@drawable/star_rating_small" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
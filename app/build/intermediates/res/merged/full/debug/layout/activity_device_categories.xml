<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <include layout="@layout/activity_top_bar"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/interests"
        android:layout_below="@+id/top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/header"
            android:layout_below="@id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@color/white" >

            <TextView
                android:id="@+id/activity_title"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="22sp" />

        </LinearLayout>

        <TableLayout
            android:id="@+id/interests_device_table"
            android:layout_marginTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <cs.usense.views.InformationView
                    android:id="@+id/info_0"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_10"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_20"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_30"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <cs.usense.views.InformationView
                    android:id="@+id/info_40"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_50"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_60"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_70"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <cs.usense.views.InformationView
                    android:id="@+id/info_80"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_90"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_100"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_110"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <cs.usense.views.InformationView
                    android:id="@+id/info_120"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_130"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_140"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_150"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <cs.usense.views.InformationView
                    android:id="@+id/info_160"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_170"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_180"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_190"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:id="@+id/view_more"
            android:background="@drawable/shape_rounded_rectangle_black"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/interests_device_table"
            android:gravity="center"
            android:padding="10dp" >

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="5dp"
                android:drawingCacheQuality="high"
                android:src="@drawable/ic_double_arrow"
                android:tint="@color/white"
                tools:ignore="ContentDescription" />

            <TextView
                android:text="@string/view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center" />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

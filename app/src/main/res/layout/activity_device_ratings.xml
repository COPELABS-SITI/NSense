<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="5dp"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <include layout="@layout/activity_top_bar"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/interests"
        android:layout_below="@+id/top_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/header"
            android:layout_below="@id/top"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@color/white" >

            <TextView
                android:id="@+id/activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/header_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/hard_gray"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginTop="5dp" />

        </LinearLayout>

        <TableLayout
            android:id="@+id/interests_device_table"
            android:layout_below="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp" >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/main_title_0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center" />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:clickable="true" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/main_title_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/main_title_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center" />

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="70dp"
                    android:layout_height="30dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UseCompoundDrawables">

                        <TextView
                            android:id="@+id/main_title_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:gravity="center" />

                    </LinearLayout>

                </RelativeLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <cs.usense.views.InformationView
                    android:id="@+id/info_0"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_1"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_2"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_3"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <cs.usense.views.InformationView
                    android:id="@+id/info_4"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_5"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_6"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_7"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <cs.usense.views.InformationView
                    android:id="@+id/info_8"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_9"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_10"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_11"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <cs.usense.views.InformationView
                    android:id="@+id/info_12"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_13"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_14"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_15"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <cs.usense.views.InformationView
                    android:id="@+id/info_16"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_17"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_18"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

                <cs.usense.views.InformationView
                    android:id="@+id/info_19"
                    android:layout_marginRight="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_height="70dp"
                    android:layout_width="70dp" />

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:id="@+id/view_more"
            android:background="@drawable/shape_rounded_rectangle_black"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginEnd="5dp"
            android:layout_alignParentBottom="true"
            android:layout_alignEnd="@+id/interests_device_table"
            android:gravity="center"
            android:padding="10dp" >

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginRight="5dp"
                android:drawingCacheQuality="high"
                android:src="@drawable/ic_double_arrow"
                android:tint="@color/white"
                tools:ignore="ContentDescription" />

            <TextView
                android:text="@string/view_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:gravity="center" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
